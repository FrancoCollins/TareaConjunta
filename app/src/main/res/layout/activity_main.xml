<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LayoutTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizzeria "
            android:textAlignment="center"
            android:textSize="45sp" />

        <LinearLayout
            android:id="@+id/horiontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etiquetaNombre"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Nombre: "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/entradaNombre"
                android:layout_width="320dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horiontal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etiquetaDireccion"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Direccion: "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/entradaDireccion"
                android:layout_width="308dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tituloTamano"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20sp"
            android:text="Elija el tamaño de su pizza"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/pequeña"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="21sp"
                android:text="pequeña" />

            <RadioButton
                android:id="@+id/mediana"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="mediana" />

            <RadioButton
                android:id="@+id/grande"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="grande" />

        </RadioGroup>


        <TextView
            android:id="@+id/tituloIngredientes"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20sp"
            android:text="Elija los ingredientes que desea agregar"
            android:textAlignment="center"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/checkFila1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tomate"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="21sp"
                android:text="Tomate" />


            <CheckBox
                android:id="@+id/mozzarella"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="Mozzarella" />

            <CheckBox
                android:id="@+id/emmental"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="Emmental" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkFila2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/salmon"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="21sp"
                android:text="salmón" />


            <CheckBox
                android:id="@+id/pepperoni"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="Pepperoni" />

            <CheckBox
                android:id="@+id/atun"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="Atún" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkFila3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/berenjena"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="21sp"
                android:text="Berenjena" />


            <CheckBox
                android:id="@+id/aceitunas"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="Aceitunas" />

            <CheckBox
                android:id="@+id/pina"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="Piña" />
        </LinearLayout>

        <Button
            android:id="@+id/realizarPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizar pedido"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/titulosDatosCompra"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="20sp"
            android:text="Datos de compra"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/horiontal4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/labelSalidaD"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Direccion: "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/salidaDireccion"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horiontal5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etiquetaEntregaN"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Nombre: "
                android:textColor="@color/black"
                android:textSize="22sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/salidaNombre"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/Usuario"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Total a pagar: "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/salidaPrecio"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>